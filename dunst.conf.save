[global]
font = "JetBrainsMonoExtrabold 12"
markup = yes
format = "%a: %s\n%b"
#sort = yes
indicate_hidden = yes
alignment = left
show_age_threshold = 60
word_wrap = yes
ignore_newline = no
stack_duplicates = true
hide_duplicates_count = false
show_indicators = yes
geometry = "400x5-30+50"
idle_threshold = 120
follow = mouse
sticky_history = yes
history_length = 20
line_height = 0
padding = 20
horizontal_padding = 10
frame_width = 3
frame_color = "#0101df"
separator_height = 5
#separator_color = auto
separator_color = foreground
#separator_color = frame
startup_notification = false

# dmenu(-compatible) command that will be run when opening the context menu
dmenu = /usr/local/bin/dmenu -p dunst:

# command that will be run when opening a URL
#browser = /usr/local/bin/firefox -new-tab

[urgency_low]
background = "#141c21"
foreground = "#93a1a1"
frame_color = "#ffcc00"
timeout = 5

[urgency_normal]
background = "#141c21"
foreground = "#93a1a1"
frame_color = "#04b404"
timeout = 10

[urgency_critical]
background = "#141c21"
foreground = "#93a1a1"
frame_color = "#df013a"
timeout = 0
